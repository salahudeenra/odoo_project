<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_partner_attribution_v1" model="ir.ui.view">
        <field name="name">sale.order.form.partner_attribution_v1</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Buttons in header -->
            <xpath expr="//header" position="inside">
                <button name="action_lock_attribution"
                        type="object"
                        string="Lock Attribution"
                        class="btn-primary"
                        invisible="attribution_locked"/>

                <button name="action_unlock_attribution"
                        type="object"
                        string="Unlock Attribution"
                        class="btn-secondary"
                        confirm="Are you sure you want to unlock attribution?"
                        invisible="not attribution_locked"/>
            </xpath>

            <!-- Fields block -->
            <xpath expr="//sheet//group" position="inside">
                <group string="Partner Attribution (v1)">
                    <field name="partner_code_input" readonly="attribution_locked"/>
                    <field name="attributed_partner_id" readonly="1"/>
                    <field name="attribution_locked" readonly="1"/>
                    <field name="attribution_locked_at" readonly="1"/>
                    <field name="attribution_locked_by" readonly="1"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>

