<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_partner_payout_batch_tree" model="ir.ui.view">
    <field name="name">partner.attribution.payout.batch.tree</field>
    <field name="model">partner.attribution.payout.batch</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="company_id"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_partner_payout_batch_form" model="ir.ui.view">
    <field name="name">partner.attribution.payout.batch.form</field>
    <field name="model">partner.attribution.payout.batch</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_load_payables" type="object" string="Load Payables" class="btn-primary"
                  invisible="state != 'draft'"/>
          <button name="action_generate_vendor_bills" type="object" string="Generate Vendor Bills" class="btn-primary"
                  invisible="state != 'draft'"/>
          <button name="action_sync_paid_status" type="object" string="Sync Paid Status" class="btn-secondary"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,generated,done"/>
        </header>

        <sheet>
          <group>
            <field name="name"/>
            <field name="company_id"/>
            <field name="state" readonly="1"/>
          </group>

          <notebook>
            <page string="Ledger Lines">
              <field name="line_ids" readonly="1">
                <tree>
                  <field name="display_name"/>
                  <field name="partner_id"/>
                  <field name="commission_amount"/>
                  <field name="state"/>
                  <field name="partner_kyc_status"/>
                  <field name="vendor_bill_id"/>
                </tree>
              </field>
            </page>

            <page string="Vendor Bills">
              <field name="vendor_bill_ids" readonly="1">
                <tree>
                  <field name="name"/>
                  <field name="partner_id"/>
                  <field name="amount_total"/>
                  <field name="payment_state"/>
                  <field name="state"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_partner_payout_batches" model="ir.actions.act_window">
    <field name="name">Partner Payout Batches</field>
    <field name="res_model">partner.attribution.payout.batch</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>