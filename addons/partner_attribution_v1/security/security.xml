<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Category (for Settings > Users & Companies > Groups) -->
    <record id="module_category_partner_attribution" model="ir.module.category">
        <field name="name">Partner Attribution</field>
        <field name="sequence">35</field>
    </record>

    <!-- Groups -->
    <record id="group_partner_attr_officer" model="res.groups">
        <field name="name">Partner Attribution Officer</field>
        <field name="category_id" ref="partner_attribution_v1.module_category_partner_attribution"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_partner_attr_manager" model="res.groups">
        <field name="name">Partner Attribution Manager</field>
        <field name="category_id" ref="partner_attribution_v1.module_category_partner_attribution"/>
        <field name="implied_ids" eval="[(4, ref('partner_attribution_v1.group_partner_attr_officer'))]"/>
    </record>

    <!-- =========================
         Portal record rules
         (partner sees only own)
         ========================= -->

    <!-- Ledger: portal can only read own ledger lines -->
    <record id="rule_partner_ledger_portal_own" model="ir.rule">
        <field name="name">Portal: Ledger own only</field>
        <field name="model_id" ref="partner_attribution_v1.model_partner_attribution_ledger"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>