<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category -->
    <record id="module_category_partner_attribution" model="ir.module.category">
        <field name="name">Partner Attribution</field>
        <field name="sequence">30</field>
    </record>

    <!-- Officer -->
    <record id="group_partner_attr_officer" model="res.groups">
        <field name="name">Partner Attribution Officer</field>
        <field name="category_id" ref="partner_attribution_v1.module_category_partner_attribution"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Manager -->
    <record id="group_partner_attr_manager" model="res.groups">
        <field name="name">Partner Attribution Manager</field>
        <field name="category_id" ref="partner_attribution_v1.module_category_partner_attribution"/>
        <field name="implied_ids" eval="[(4, ref('partner_attribution_v1.group_partner_attr_officer'))]"/>
    </record>
</odoo>